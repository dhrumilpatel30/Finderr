@model IEnumerable<Finderr.Models.GroupMember>

@{
    ViewData["Title"] = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Members</h1>

<p>
    <a asp-action="AddNewMember">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfile!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupMemberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GroupMemberId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupMemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
