@{
    ViewData["Title"] = "Search Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-5 fs-5">
    <h1 class="text-center fw-bolder">Search Page(leave blank for all results)</h1>
    <form asp-action="Details">
        <div class="form-group">
            <label for="GroupName">Search By Group Name</label><br>
            <input class="form-control" type="text" name="GroupName" id="GroupName" />
        </div>
        <br />
        <div class="form-group">
            <label for="UserName">Search By User Name</label><br />
            <input class="form-control" type="text" name="UserName" id="UserName" />
        </div>
        <br />
        <div class="form-group">
            <label for="Location">Search By Location</label><br />
            <input class="form-control" type="text" name="Location" id="Location" />

        </div>
        <br />
        <div class="form-group">
            <label for="Occupation">Search By Occupation</label><br />
            <input class="form-control" type="text" name="Occupation" id="Occupation" />
        </div>
        <br />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
</div>
